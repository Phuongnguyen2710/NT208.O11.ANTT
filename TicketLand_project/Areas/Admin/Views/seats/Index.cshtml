@model IEnumerable<TicketLand_project.Models.seat>

@{
    ViewBag.Title = "Quản lý Ghế";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}

<h1 class="custom_h1"><b>Quản lý ghế ngồi </b></h1>

<div class="container_custom">
    <div class="box_shadow">
        <table class="tableStyle">
            <tr>
                <th>Tên phòng</th>
                <th>Loại ghế</th>
                <th>Hàng</th>
                <th>Cột</th>
                <th>Tình trạng</th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.room.room_name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.seat_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.row)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.seats_status)
                    </td>

                    <td>
                        <button class="btn btn-xs btn-primary " onclick="location.href='@Url.Action("Edit", new { id = item.seat_id })'">
                            <i class="fa fa-edit custom_i"></i>
                        </button>

                        <button class="btn btn-xs btn-info " onclick="location.href='@Url.Action("Details", new { id = item.seat_id })'">
                            <i class="fa fa-info-circle custom_i"></i>
                        </button>


                        <button class="btn btn-xs btn-warning" data-toggle="modal" data-target="#DeleteModal_@item.seat_id">
                            <i class="fa fa-trash custom_i"></i>
                        </button>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="DeleteModal_@item.seat_id" tabindex="-1" role="dialog" aria-labelledby="DeleteLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="DeleteLabel">Xác nhận xóa</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Bạn có chắc chắn muốn xóa đối tượng này không?
                                        <input type="hidden" id="deleteId" value="" />
                                    </div>

                                    <div class="modal-footer">
                                        @using (Html.BeginForm("Delete", "seats", "item.seat_id", FormMethod.Post, new { id = "confirmDelete" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" id="deleteId" name="id" value="@item.seat_id" />
                                            <div class="form-actions no-color text-center">
                                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    // Thêm sự kiện click cho nút "Xác nhận" trong modal
    document.getElementById("confirmDelete").addEventListener("click", function () {
        // Lấy seat_id từ hidden input trong modal
        var deleteId = document.getElementById("deleteId").value;

        // Đặt giá trị vào input hidden trong form
        document.getElementById("deleteForm").elements["id"].value = deleteId;

        // Submit form
        $("#deleteForm").submit();
    });

</script>


