                        <li class="nav-item col-lg-2">
                            <a onclick="scrollToPosition('home-page')" href="/home/index#" class="nav-link active" style="text-transform: none; font-size: 20px">
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item col-lg-2">
                            <a onclick="scrollToPosition('schedule-page')" href="/home/index#schedule-page" class="nav-link" style="text-transform: none; font-size: 20px">
                                Lịch chiếu
                            </a>
                        </li>
                        <li class="nav-item col-lg-2">
                            <a onclick="scrollToPosition('news-page')" href="/home/index#news-page" class="nav-link" style="text-transform: none; font-size: 20px">
                                Tin tức
                            </a>
                        </li>
                        <li class="nav-item col-lg-2">
                            <a onclick="scrollToPosition('about-page')" href="/home/index#about-page" class="nav-link" style="text-transform: none; font-size: 20px">
                                Chúng tôi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="text-transform: none; font-size: 20px">
                                Tài khoản
                                <i class="bx bx-chevron-down"></i>
                            </a>
                            <ul class="dropdown-menu" style="display: none;">
                                <li class="nav-item">
                                    <a class="nav-link" href="/Home/Login">Đăng nhập</a>
                                </li>
                                <li class="nav-item mean-last">
                                    <a class="nav-link" href="/Home/Register">Đăng kí</a>
                                </li>
                            </ul>
                            <a class="mean-expand" href="#" style="font-size: 18px">+</a>
                        </li>

                    </ul>
                    <div class="col-lg-2 nav-btn text-normal">
                        <a href="#" class="col-12 default-btn btn-bg-three border-radius-5">Đặt vé ngay</a>
                    </div>
                </nav>
            </div>

            <a href="/" class="logo">
                <img src="/Assets/img/logos/logo.png" class="logo-one" alt="Logo">
            </a>
        </div>

        <!-- Menu For Desktop Device -->
        <div class="main-nav">
            <div class="container">
                <nav class="position-static navbar navbar-expand-md bg-light">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">
                        <img src="~/Assets/img/logos/logo.png" class="logo-one" alt="Logo">
                    </a>

                    <div class="collapse navbar-collapse mean-menu" style="justify-content:center; justify-items:center;" id="navbarSupportedContent">
                        <ul class="col-lg-10 navbar-nav">
                            <li class="nav-item col-lg-2">
                                <a onclick="scrollToPosition('home-page')" href="/home/index#" class="nav-link active" style="text-transform: none; font-size: 20px">
                                    Trang chủ
                                </a>
                            </li>
                            <li class="nav-item col-lg-2">
                                <a onclick="scrollToPosition('schedule-page')" href="/home/index#schedule-page" class="nav-link" style="text-transform: none; font-size: 20px">
                                    Lịch chiếu
                                </a>
                            </li>
                            <li class="nav-item col-lg-2">
                                <a onclick="scrollToPosition('news-page')" href="/home/index#news-page" class="nav-link" style="text-transform: none; font-size: 20px">
                                    Tin tức
                                </a>
                            </li>
                            <li class="nav-item col-lg-2">
                                <a onclick="scrollToPosition('about-page')" href="/home/index#about-page" class="nav-link" style="text-transform: none; font-size: 20px">
                                    Chúng tôi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="text-transform: none; font-size: 20px">
                                    Tài khoản
                                    <i class='bx bx-chevron-down'></i>
                                </a>
                                <ul class="dropdown-menu">
                                    @if (Session["IsLoggedIn"] == null)
                                    {
                                        <li class="nav-item">
                                            @Html.ActionLink("Đăng nhập", "Login", "Home", new { area = "" }, new { @class = "nav-link" })
                                        </li>

                                        <li class="nav-item">
                                            @Html.ActionLink("Đăng kí", "Register", "Home", new { area = "" }, new { @class = "nav-link" })
                                        </li>
                                    }
                                    else
                                    {


                                        <li class="nav-item text-center">
                                            @if (!string.IsNullOrEmpty((string)Session["Avartar"]))
                                            {
                                                <img src="@Url.Content((string)Session["Avartar"])" class="img_avartar" style="border-radius: 50%; height: 48px; width: 48px;" />
                                            }
                                            else
                                            {
                                                <span>No image available</span>
                                            }
                                            Hello, @Session["Username"]
                                        </li>

                                        <li class="nav-item text-danger">
                                            @Html.ActionLink("Đăng xuất", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Chi tiết tài khoản", "Profile", "Home", new { id = Session["idMember"] }, new { @class = "nav-link" })
                                        </li>
                                    }
                                </ul>
                            </li>

                        </ul>
                        <div class="col-lg-2 nav-btn text-normal">
                            <a href="#" class="col-12 default-btn btn-bg-three border-radius-5">Đặt vé ngay</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- End Navbar Area -->
    @RenderBody()

